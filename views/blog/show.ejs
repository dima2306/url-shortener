<article class="w-2/4 mx-auto">
    <div class="xl:divide-y xl:divide-gray-200 xl:dark:divide-gray-700">
        <header class="pt-6 xl:pb-6">
            <div class="space-y-1 text-center">
                <dl class="space-y-10">
                    <div>
                        <dt class="sr-only">Published On</dt>
                        <dd class="text-base font-medium text-gray-500">
                            <time datetime="<%= post.createdAt; %>"><%= post.createdAt; %></time>
                        </dd>
                    </div>
                </dl>
                <h1 class="text-3xl font-extrabold leading-9 text-gray-900 dark:text-gray-100">
                    <%= post.title; %>
                </h1>
            </div>
        </header>
        <div class="divide-y divide-gray-200 dark:divide-gray-600 xl:divide-y-0">
            <div class="divide-y divide-gray-200 dark:divide-gray-600 xl:pb-0">
                <div class="pt-6 pb-10 xl:pt-11 xl:border-b xl:border-gray-200 xl:dark:border-gray-700">
                    <img src="<%= post.cover %>" alt="post cover"
                         class="w-full h-96 object-cover rounded-lg"
                         height="384"
                    />
                </div>
                <div class="max-w-none pb-8 pt-10">
                    <%= post.content; %>
                </div>
            </div>
        </div>
    </div>
</article>

<div class="divide-y divide-gray-200 dark:divide-gray-600">
    <div class="space-y-2 pb-3">
        <h1 class="text-3xl leading-9 font-extrabold tracking-tight">
            Blog
        </h1>
        <p class="text-lg leading-7 text-gray-500">
            Here are listed posts about random topics!
        </p>
    </div>
    <ul class="divide-y divide-gray-200 dark:divide-gray-600">
        <% posts.forEach(post => { %>
            <li class="py-12">
                <article>
                    <div class="space-y-2 xl:grid xl:grid-cols-4 xl:space-y-0">
                        <dl class="hidden items-baseline xl:col-start-1 xl:row-start-1 xl:flex">
                            <dt class="sr-only">Published On</dt>
                            <dd class="text-base font-medium">
                                <a href="/blog/<%= post.slug ;%>" class="break-words">
                                    <img src="<%= post.cover; %>" alt="post cover" loading="lazy"
                                         class="object-cover rounded-xl max-w-full"
                                    />
                                </a>
                            </dd>
                        </dl>
                        <div class="space-y-5 xl:col-span-3">
                            <div class="space-y-6">
                                <div>
                                    <h2 class="text-2xl leading-8 font-bold tracking-tight">
                                        <a href="/blog/<%= post.slug; %>"
                                           class="text-gray-900 dark:text-gray-100 hover:underline">
                                            <%= post.title; %>
                                        </a>
                                    </h2>
                                    <div class="text-base font-medium leading-6">
                                        <time datetime="<%= post.createdAt; %>"><%= post.createdAt; %></time>
                                    </div>
                                </div>
                                <div class="max-w-none text-gray-500 dark:text-gray-400">
                                    <%= post.content; %>
                                </div>
                            </div>
                            <div class="text-base font-medium leading-6">
                                <a href="/blog/<%= post.slug; %>" class="text-blue-500 hover:text-blue-600">
                                    Read more â†’
                                </a>
                            </div>
                        </div>
                    </div>
                </article>
            </li>
        <% }); %>
    </ul>
</div>
